<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home page</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>

<style>
  .table-container {
    padding: 15px 20px;
  }

  .title {
    font-size: 25px;
    font-weight: 600;
    padding-bottom: 10px;
  }

  table {
    border-collapse: collapse;
    width: 100%;
  }

  th,
  td {
    padding: 8px;
    text-align: left;
    border-bottom: 1px solid #ddd;
  }

  tr:hover {
    background-color: #ccc;
  }
</style>

<body>
  <div class="topnav">
    <a class="active" href="/">Home</a>
    <a href="/create">Create user</a>
  </div>
  <div class="table-container">
      <div class="title">List Users</div>
      <table>
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>Name</th>
          <th>City</th>
          <th class="flex">Action</th>
        </tr>

        <% listUsers.forEach(user => { %>
          <tr>
            <td>
              <%= user.id %>
            </td>
            <td>
              <%= user.email %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= user.city %>
            </td>
            <td>
              <div class="flex">
                <a class="a-tag " href="/update/<%= user.id %>">Edit</a>
                <form action="/delete-user/<%= user.id %>" method="post">
                  <button>Delete</button>
                </form>
              </div>
            </td>
          </tr>
        <% }) %>

      </table>
  </div>
</body>

</html>